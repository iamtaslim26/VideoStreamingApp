<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddVideoActivity">

    <include
        android:id="@+id/add_video_layout"
        layout="@layout/app_bar_layout"/>

    <VideoView
        android:id="@+id/play_video"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/add_video_layout"
        android:layout_marginTop="2dp"/>

    <EditText
        android:id="@+id/title_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text"
        android:layout_below="@+id/play_video"
        android:hint="Add Title"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        />

    <Button
        android:id="@+id/browse_video_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_video"
        android:background="@drawable/back_ground"
        android:padding="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="25dp"
        android:hint="Browser Video"
        app:passwordToggleEnabled="true"
        android:textColorHint="@color/black"/>

    <Button
        android:id="@+id/upload_video_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/browse_video_btn1"
        android:background="@drawable/back_ground"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="25dp"
        android:hint="Upload Video"
        app:passwordToggleEnabled="true"
        android:textColorHint="@color/black"/>


</RelativeLayout>