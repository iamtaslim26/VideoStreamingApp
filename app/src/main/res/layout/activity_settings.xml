<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <ImageView
        android:id="@+id/set_up_image"
        android:layout_width="match_parent"
        android:background="@drawable/profile"
        android:layout_margin="10dp"
        android:layout_height="300dp"/>

    <EditText
        android:id="@+id/set_up_username1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_up_image"
        android:background="@drawable/back_ground"
        android:ems="10"
        android:padding="10dp"
        android:hint="User Name"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/set_up_Full_Name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_up_username1"
        android:background="@drawable/back_ground"
        android:ems="10"
        android:padding="10dp"
        android:hint="Full Name"
        android:drawableLeft="@drawable/back_ground"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/set_up_country_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_up_Full_Name1"
        android:background="@drawable/back_ground"
        android:ems="10"
        android:padding="10dp"
        android:hint="Country"
        android:drawableLeft="@drawable/back_ground"
        android:layout_marginTop="20dp"/>


    <Button
        android:id="@+id/set_up_save_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_up_country_name1"
        android:layout_marginTop="30dp"
        android:text="Save"
        android:layout_marginLeft="175dp"
        android:textColor="@android:color/white"/>


</RelativeLayout>