<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pots_border"
    tools:context=".EditActivity">


    <TextView
        android:id="@+id/edit_video_description"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="edit_description"
        android:background="@drawable/edit_text"
        android:padding="25dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/edit_video_post_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_video_description"
        android:layout_margin="30dp"
        android:text="Edit Video"
        android:visibility="invisible"
        android:background="@drawable/edit_text"/>
    <Button
        android:id="@+id/delete_video_post_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_video_post_btn"
        android:layout_margin="30dp"
        android:text="Delete Video"
        android:visibility="invisible"
        android:background="@drawable/edit_text"/>


</RelativeLayout>